layout: base
---

<header class="text-white p-6 md:p-8 lg:p-10" style="background-image: linear-gradient(to bottom, rgba(0,119,151,.5), rgba(0,119,151,0) 35%), url(/assets/img/header.jpg);">
  <div class="container mx-auto">
    {% include "../_includes/nav.njk" %}
    <div class="text-center py-32 px-4 sm:px-8 md:py-52 md:px-20">
      <h1 class="text-4xl sm:text-6xl md:text-7xl lg:text-8xl my-6 md:my-8 font-bold drop-shadow text-balance">{{heading}}</h1>
      <p class="text-xl md:text-2xl md:mt-6 my-6 md:my-8 drop-shadow text-balance">{{subheading}}</p>
    </div>
  </div>
</header>
<main>
  <div class="container mx-auto">
    {{content | safe}}
  </div>
</main>